{
  "type": "bubble",
  "header": {
    "type": "box",
    "layout": "horizontal",
    "contents": [
      {
        "type": "text",
        "text": "お気に入り一覧",
        "weight": "bold",
        "color": "#fed136",
        "wrap": true,
        "align": "start"
      },
      {
        "type": "text",
        "color": "#E6E7E2",
        "text": "(1/1)",
        "weight": "bold"
      }
    ],
    "spacing": "md"
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "box",
        "layout": "vertical",
        "margin": "xxl",
        "spacing": "sm",
        "contents": [
          {
            "type": "box",
            "layout": "horizontal",
            "contents": [
              {
                "type": "text",
                "text": "[LectureName]",
                "color": "#555555",
                "flex": 7,
                "wrap": true,
                "size": "md"
              },
              {
                "type": "text",
                "text": "選択",
                "size": "md",
                "color": "#4c7cf5",
                "align": "end",
                "weight": "bold",
                "decoration": "underline",
                "margin": "none",
                "action": {
                  "type": "message",
                  "label": "action",
                  "text": "#123456"
                },
                "offsetBottom": "3px",
                "flex": 2
              },
              {
                "type": "text",
                "text": "×",
                "size": "md",
                "color": "#881111",
                "align": "end",
                "weight": "bold",
                "decoration": "none",
                "margin": "none",
                "action": {
                  "type": "postback",
                  "label": "action",
                  "data": "hello"
                },
                "offsetBottom": "3px"
              }
            ],
            "margin": "lg"
          }
        ]
      },
      {
        "type": "separator",
        "margin": "xxl"
      },
      {
        "type": "box",
        "layout": "vertical",
        "contents": [
          {
            "type": "text",
            "text": "お気に入りは最大50件まで登録できます。",
            "size": "xxs",
            "color": "#aaaaaa"
          }
        ],
        "margin": "md"
      }
    ]
  },
  "styles": {
    "header": {
      "backgroundColor": "#3C3C3A"
    },
    "body": {
      "backgroundColor": "#F4F3F9"
    },
    "footer": {
      "separator": true,
      "backgroundColor": "#E7E8E3",
      "separatorColor": "#D6D6D4"
    }
  }
}